<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="contentInsetStart">5dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/accent</item>
        <!--EditText hint color-->
        <item name="android:textColorHint">@color/text_secondary</item>
        <!-- TextInputLayout text color-->
        <item name="colorControlActivated">@color/text_secondary</item>
        <!-- EditText line color when EditText on-focus-->
        <item name="colorControlHighlight">@color/text_secondary</item>
        <!-- EditText line color when EditText  in un-focus-->
        <item name="colorControlNormal">@color/colorPrimaryLight</item>
    </style>
    <style name="HomeActivityTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#ffffff</item>
        <item name="android:textColorPrimary">@color/black_75_per</item>
        <item name="android:icon">@drawable/aappicon</item>
    </style>
    <style name="HomeActivityTheme1" parent="Theme.AppCompat.Light">

    </style>
    <style name="PinLoginActivityTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#ffffff</item>
        <item name="android:textColorPrimary">@color/black_75_per</item>
    </style>
    <style name="zaarkdialogfragment" parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@color/black_75_per</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Zaark_Dialog_Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:background">@drawable/transparent_btn_selector</item>
    </style>

    <style name="Zaark_Dialog_Button.Text">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">42dp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
