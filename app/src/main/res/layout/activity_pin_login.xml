<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_black">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:visibility="invisible"
                android:gravity="left"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/img_logout1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/share"
                    android:src="@drawable/ic_share"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/img_logout1"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Register"
                    android:textColor="@android:color/holo_blue_light"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_header"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/share"
                    android:src="@drawable/ic_share"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/img_share"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/share"
                    android:textColor="@android:color/holo_blue_light"/>

            </RelativeLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tvTitle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:background="@drawable/aappicon"
                android:gravity="center" />
            <TextView
                android:id="@+id/txt_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/black_75_per"
                android:textSize="25sp"
                android:textStyle="bold"/>

        </LinearLayout>
        <TextView
            android:id="@+id/txt_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/red_btn_bg_color"
            android:textSize="23sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="40dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <LinearLayout
                                android:id="@+id/linear_key_pad"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                tools:ignore="UselessParent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="5dp"
                                        android:gravity="center"
                                        android:paddingLeft="20dp"
                                        android:paddingRight="20dp"
                                        android:paddingBottom="10dp"
                                        android:paddingTop="20dp"
                                        android:text="Enter 6 - Digit MPIN"
                                        android:textColor="@color/black"
                                        android:textSize="20dp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_margin="10dp"
                                    android:background="@color/blue_variant3" />

                                <RelativeLayout
                                    android:id="@+id/relative_show_pwd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_margin="15dp">

                                    <Button
                                        android:id="@+id/btn_pswrd_one"
                                        style="@style/empty_show_password_righ_aligned"
                                        android:layout_width="23dp"
                                        android:layout_height="23dp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentLeft="true" />

                                    <Button
                                        android:id="@+id/btn_pswrd_two"
                                        style="@style/empty_show_password_righ_aligned"
                                        android:layout_width="23dp"
                                        android:layout_height="23dp"
                                        android:layout_toEndOf="@+id/btn_pswrd_one"
                                        android:layout_toRightOf="@id/btn_pswrd_one" />

                                    <Button
                                        android:id="@+id/btn_pswrd_three"
                                        style="@style/empty_show_password_righ_aligned"
                                        android:layout_width="23dp"
                                        android:layout_height="23dp"
                                        android:layout_toEndOf="@+id/btn_pswrd_two"
                                        android:layout_toRightOf="@id/btn_pswrd_two" />

                                    <Button
                                        android:id="@+id/btn_pswrd_four"
                                        style="@style/empty_show_password_righ_aligned"
                                        android:layout_width="23dp"
                                        android:layout_height="23dp"
                                        android:layout_toEndOf="@+id/btn_pswrd_three"
                                        android:layout_toRightOf="@id/btn_pswrd_three" />

                                    <Button
                                        android:id="@+id/btn_pswrd_five"
                                        style="@style/empty_show_password_righ_aligned"
                                        android:layout_width="23dp"
                                        android:layout_height="23dp"
                                        android:layout_toEndOf="@+id/btn_pswrd_four"
                                        android:layout_toRightOf="@id/btn_pswrd_four" />

                                    <Button
                                        android:id="@+id/btn_pswrd_six"
                                        style="@style/empty_show_password"
                                        android:layout_width="23dp"
                                        android:layout_height="23dp"
                                        android:layout_toEndOf="@+id/btn_pswrd_five"
                                        android:layout_toRightOf="@id/btn_pswrd_five" />

                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="15dp"
                                    android:background="@color/blue_variant3"
                                    android:gravity="bottom"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/btn_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="1dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">


                                        <Button
                                            android:id="@+id/btn_keypad_one"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimary"
                                            android:text="1"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />

                                        <Button
                                            android:id="@+id/btn_keypad_two"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimary"
                                            android:text="2"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />


                                        <Button
                                            android:id="@+id/btn_keypad_three"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimary"
                                            android:text="3"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="1dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">


                                        <Button
                                            android:id="@+id/btn_keypad_four"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimary"
                                            android:text="4"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />

                                        <Button
                                            android:id="@+id/btn_keypad_five"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimary"
                                            android:text="5"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />

                                        <Button
                                            android:id="@+id/btn_keypad_six"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimary"
                                            android:text="6"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="1dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <Button
                                            android:id="@+id/btn_keypad_seven"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimary"
                                            android:text="7"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />

                                        <Button
                                            android:id="@+id/btn_keypad_eight"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimary"
                                            android:text="8"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />


                                        <Button
                                            android:id="@+id/btn_keypad_nine"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimary"
                                            android:text="9"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />

                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">


                                        <!--<Button
                                            android:id="@+id/clear"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@drawable/button_pin"
                                            android:text="clear"
                                            android:layout_margin="1dp"
                                            android:textSize="15sp"
                                            android:textColor="@color/colorPrimary"
                                            android:textStyle="bold" />-->
                                        <Button
                                            android:id="@+id/btn_keypad_back"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimary"
                                            android:text="Del"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />

                                        <Button
                                            android:id="@+id/btn_keypad_zero"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimary"
                                            android:text="0"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />

                                        <Button
                                            android:id="@+id/btn_keypad_clear_all"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="1dp"
                                            android:layout_weight="1"
                                            android:background="@color/colorPrimary"
                                            android:text="CLR"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </ScrollView>

        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/relative_footer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/img_logout"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/share"
                android:src="@drawable/ic_registration"
                />
            <TextView
                android:id="@+id/txt_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_logout"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Register"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/img_quit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/share"
                android:src="@drawable/icclose"
                tools:ignore="VectorDrawableCompat" />
            <TextView
                android:id="@+id/txt_quit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_quit"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:layout_marginTop="5dp"
                android:text="Quit"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>

