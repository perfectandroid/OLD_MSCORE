<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/lnrMain"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <FrameLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/llPassbook"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    app:cardCornerRadius="4sp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:background="#2471a3"
                        android:layout_weight="1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Passbook"
                            android:layout_weight="1"
                            android:paddingLeft="60dp"
                            app:fontFamily="sans-serif-black"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black_alpha"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:layout_weight="11"
                            app:srcCompat="@drawable/ic_gray_arrow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </FrameLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/black_alpha"
                android:id="@+id/profileImg"
                android:background="@drawable/ic_passbook_circle"
                android:layout_marginLeft="15sp" />

            <FrameLayout
                android:layout_marginTop="100sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/llNotice"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    app:cardCornerRadius="4sp"
                    app:cardElevation="4dp" >

                    <LinearLayout
                        android:background="#2471a3"
                        android:layout_weight="1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Notice"
                            android:layout_weight="1"
                            android:paddingLeft="60dp"
                            app:fontFamily="sans-serif-black"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black_alpha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_weight="11"
                            app:srcCompat="@drawable/ic_gray_arrow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </FrameLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/black_alpha"
                android:layout_marginTop="80dp"
                android:layout_marginStart="15sp"
                android:id="@+id/profileIm"
                android:background="@drawable/ic_notice_circle"
                android:layout_marginLeft="15sp" />

            <FrameLayout
                android:layout_marginTop="180sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/llSearch"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    app:cardCornerRadius="4sp"
                    app:cardElevation="4dp" >

                    <LinearLayout
                        android:background="#2471a3"
                        android:layout_weight="1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Statement"
                            android:layout_weight="1"
                            android:paddingLeft="60dp"
                            app:fontFamily="sans-serif-black"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black_alpha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_weight="11"
                            app:srcCompat="@drawable/ic_gray_arrow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </FrameLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginTop="160dp"
                android:layout_marginStart="15sp"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/black_alpha"
                android:id="@+id/profileImage"
                android:background="@drawable/ic_search_circle"
                android:layout_marginLeft="15sp" />

            <FrameLayout
                android:layout_marginTop="260sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/llAccountsummary"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    app:cardCornerRadius="4sp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:background="#2471a3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:paddingLeft="60dp"
                            android:text="Account Summary"
                            android:textColor="@color/black_alpha"
                            app:fontFamily="sans-serif-black" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="11"
                            app:srcCompat="@drawable/ic_gray_arrow" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </FrameLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginTop="240dp"
                android:layout_marginStart="15sp"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/black_alpha"
                android:id="@+id/profileImga"
                android:background="@drawable/ic_summary_circle"
                android:layout_marginLeft="15sp" />

            <FrameLayout
                android:layout_marginTop="340sp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/llStandingInstruction"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    app:cardCornerRadius="4sp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:background="#2471a3"
                        android:layout_weight="1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Standing Instruction"
                            android:layout_weight="1"
                            android:paddingLeft="60dp"
                            app:fontFamily="sans-serif-black"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black_alpha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_weight="11"
                            app:srcCompat="@drawable/ic_gray_arrow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </FrameLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginTop="320dp"
                android:layout_marginStart="15sp"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/black_alpha"
                android:id="@+id/profileImag"
                android:background="@drawable/ic_instruct_circle"
                android:layout_marginLeft="15sp" />

        </FrameLayout>

</LinearLayout>
