<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:padding="10dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:layout_marginTop="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/llOwnbank"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                app:cardCornerRadius="4sp"
                app:cardElevation="4dp" >

                <LinearLayout
                    android:background="#2471a3"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Own Bank"
                        android:layout_weight="1"
                        android:paddingLeft="60dp"
                        app:fontFamily="sans-serif-black"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_alpha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_weight="11"
                        app:srcCompat="@drawable/ic_gray_arrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/black_alpha"
            android:layout_marginStart="15sp"
            android:id="@+id/profileIm"
            android:background="@drawable/ic_ownbank_circle"
            android:layout_marginLeft="15sp" />
        <FrameLayout
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/llOtherbank"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                app:cardCornerRadius="4sp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:background="#2471a3"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Other Bank"
                        android:layout_weight="1"
                        android:paddingLeft="60dp"
                        app:fontFamily="sans-serif-black"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_alpha"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_weight="11"
                        app:srcCompat="@drawable/ic_gray_arrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="65dp"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/black_alpha"
            android:id="@+id/profileImg"
            android:background="@drawable/ic_otherbank_circle"
            android:layout_marginLeft="15sp" />
    </FrameLayout>

</RelativeLayout>

