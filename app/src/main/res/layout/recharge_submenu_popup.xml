<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/llPrepaid"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                app:cardCornerRadius="4sp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="76dp"
                    android:layout_weight="1"
                    android:background="#2471a3" />

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Prepaid"
                        android:layout_weight="1"
                        android:paddingLeft="60dp"
                        app:fontFamily="sans-serif-black"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_alpha"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_weight="11"
                        app:srcCompat="@drawable/ic_gray_arrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/black_alpha"
            android:id="@+id/profileImg"
            android:background="@drawable/ic_prepaid_circle"
            android:layout_marginLeft="15sp" />

        <FrameLayout
            android:layout_marginTop="80sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/llDTH"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                app:cardCornerRadius="4sp"
                app:cardElevation="4dp" >

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="77dp"
                    android:layout_weight="1"
                    android:background="#2471a3" />

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="DTH"
                        android:layout_weight="1"
                        android:paddingLeft="60dp"
                        app:fontFamily="sans-serif-black"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_alpha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_weight="11"
                        app:srcCompat="@drawable/ic_gray_arrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/black_alpha"
            android:layout_marginTop="65dp"
            android:layout_marginStart="15sp"
            android:id="@+id/profileIm"
            android:background="@drawable/ic_dth_circle"
            android:layout_marginLeft="15sp" />

        <FrameLayout
            android:layout_marginTop="150sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/llLandLine"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                app:cardCornerRadius="4sp"
                app:cardElevation="4dp" >

                <LinearLayout
                    android:background="#2471a3"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="LandLine"
                        android:layout_weight="1"
                        android:paddingLeft="60dp"
                        app:fontFamily="sans-serif-black"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_alpha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_weight="11"
                        app:srcCompat="@drawable/ic_gray_arrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="130dp"
            android:layout_marginStart="15sp"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/black_alpha"
            android:id="@+id/profileImage"
            android:background="@drawable/ic_landline_circle"
            android:layout_marginLeft="15sp" />

        <FrameLayout
            android:layout_marginTop="220sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/llPostpaid"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                app:cardCornerRadius="4sp"
                app:cardElevation="4dp" >

                <LinearLayout
                    android:background="#2471a3"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Post Paid"
                        android:layout_weight="1"
                        android:paddingLeft="60dp"
                        app:fontFamily="sans-serif-black"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_alpha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_weight="11"
                        app:srcCompat="@drawable/ic_gray_arrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="200dp"
            android:layout_marginStart="15sp"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/black_alpha"
            android:id="@+id/profileImga"
            android:background="@drawable/ic_postpaid_circle"
            android:layout_marginLeft="15sp" />

        <FrameLayout
            android:layout_marginTop="290sp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/llDatacard"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                app:cardCornerRadius="4sp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:background="#2471a3"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Data Card"
                        android:layout_weight="1"
                        android:paddingLeft="60dp"
                        app:fontFamily="sans-serif-black"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_alpha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_weight="11"
                        app:srcCompat="@drawable/ic_gray_arrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="270dp"
            android:layout_marginStart="15sp"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/black_alpha"
            android:id="@+id/profileImag"
            android:background="@drawable/ic_datacard_circle"
            android:layout_marginLeft="15sp" />


        <FrameLayout
            android:layout_marginTop="365sp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/llKSEB"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                app:cardCornerRadius="4sp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:background="#2471a3"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="KSEB"
                        android:layout_weight="1"
                        android:paddingLeft="60dp"
                        app:fontFamily="sans-serif-black"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_alpha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_weight="11"
                        app:srcCompat="@drawable/ic_gray_arrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="340dp"
            android:layout_marginStart="15sp"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/black_alpha"
            android:id="@+id/profileIma"
            android:background="@drawable/ic_kseb_circle"
            android:layout_marginLeft="15sp" />


    </FrameLayout>

</RelativeLayout>

